{
  "name": "webp-in-css",
  "version": "0.1.2",
  "description": "PostCSS plugin and tiny JS script (131 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "lint": "eslint-ci plugin.js *.test.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "dependencies": {
    "postcss": "^7.0.17"
  },
  "devDependencies": {
    "@logux/eslint-config": "^29.1.1",
    "clean-publish": "^1.1.2",
    "eslint": "^6.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.6",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "nanodelay": "^0.1.4",
    "size-limit": "^1.3.7",
    "yaspeller-ci": "^1.0.1"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "131 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/node"
  },
  "eslintIgnore": [
    "index.js"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "WebP",
      "PostCSS",
      "JS",
      "WebP in",
      "Squoosh",
      "NG",
      "diff",
      "sh",
      "dev",
      "autoprefixer",
      "js",
      "npm",
      "webp",
      "Versioning",
      "webp-in"
    ]
  }
}
