{
  "name": "webp-in-css",
  "version": "0.2.0",
  "description": "PostCSS plugin and tiny JS script (131 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "clean": "rimraf api.md coverage/",
    "test": "jest --coverage && eslint-ci . && size-limit && yarn spell"
  },
  "dependencies": {
    "postcss": "^7.0.17"
  },
  "devDependencies": {
    "@logux/eslint-config": "^30.0.2",
    "@logux/sharec-config": "^0.3.5",
    "clean-publish": "^1.1.2",
    "documentation": "^12.1.1",
    "eslint": "^6.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "nanodelay": "^0.1.4",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.8",
    "yaspeller-ci": "^1.0.1"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "131 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/node"
  },
  "eslintIgnore": [
    "node_modules",
    "index.js"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "WebP",
      "PostCSS",
      "JS",
      "WebP in",
      "Squoosh",
      "NG",
      "diff",
      "sh",
      "dev",
      "autoprefixer",
      "js",
      "npm",
      "webp",
      "Versioning",
      "webp-in"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "version": "0.3.5"
  }
}
