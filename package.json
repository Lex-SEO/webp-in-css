{
  "name": "webp-in-css",
  "version": "0.4.0",
  "description": "PostCSS plugin and tiny JS script (131 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --coverage && eslint-ci . && size-limit && yarn spell"
  },
  "dependencies": {
    "postcss": "^7.0.32"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.1",
    "@logux/sharec-config": "^0.7.4",
    "@size-limit/preset-small-lib": "^4.5.5",
    "clean-publish": "^1.1.8",
    "eslint": "^7.6.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.2",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.2.11",
    "nanodelay": "^1.0.3",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.5",
    "yaspeller-ci": "^1.0.2"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "size-limit": [
    {
      "path": "polyfill.js",
      "limit": "131 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "polyfill.js"
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "WebP",
      "PostCSS",
      "JS",
      "WebP in",
      "Squoosh",
      "NG",
      "diff",
      "sh",
      "dev",
      "autoprefixer",
      "js",
      "npm",
      "webp",
      "Versioning",
      "webp-in",
      "polyfill",
      "bundler",
      "webpack",
      "postcss",
      "WebP  in"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.4"
  }
}
